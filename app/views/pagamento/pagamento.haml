!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %link{:href => "../assets/img/apple-icon.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "../assets/img/favicon.png", :rel => "icon", :type => "image/png"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Material Dashboard by Creative Tim
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    %meta{:content => "width=device-width", :name => "viewport"}/
    / Bootstrap core CSS
    %link{:href => "../assets/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Material Dashboard CSS
    %link{:href => "../assets/css/material-dashboard.css", :rel => "stylesheet"}/
    / CSS for Demo Purpose, don't include it in your project
    %link{:href => "../assets/css/demo.css", :rel => "stylesheet"}/
    / Fonts and icons
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons", :rel => "stylesheet", :type => "text/css"}/
  %body
    .wrapper
      .sidebar{"data-color" => "purple", "data-image" => "../assets/img/sidebar-1.jpg"}
        /
          Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"
          
          Tip 2: you can also add an image using data-image tag
        .logo
          %a.simple-text{:href => "#"}
            Social Scope
        .sidebar-wrapper
          %ul.nav
            %li
              %a{:href => "dashboard.html"}
                %i.material-icons dashboard
                %p Dashboard
            %li
              %a{:href => "user.html"}
                %i.material-icons person
                %p User Profile
            %li.active
              %a{:href => "icons.html"}
                %i.material-icons bubble_chart
                %p Scope
            %li
              %a{:href => "notifications.html"}
                %i.material-icons.text-gray notifications
                %p Notificações
      .main-panel
        %nav.navbar.navbar-transparent.navbar-absolute
          .container-fluid
            .navbar-header
              %button.navbar-toggle{"data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "#"} Informações de Pagamento
            .collapse.navbar-collapse
              %ul.nav.navbar-nav.navbar-right
                %li
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#pablo"}
                    %i.material-icons dashboard
                    %p.hidden-lg.hidden-md Dashboard
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    %i.material-icons notifications
                    %span.notification 5
                    %p.hidden-lg.hidden-md Notifications
                  %ul.dropdown-menu
                    %li
                      %a{:href => "#"} Mike John responded to your email
                    %li
                      %a{:href => "#"} You have 5 new tasks
                    %li
                      %a{:href => "#"} You're now friend with Andrew
                    %li
                      %a{:href => "#"} Another Notification
                    %li
                      %a{:href => "#"} Another One
                %li
                  %a{:href => "user.html"}
                    %i.material-icons person
                    %p.hidden-lg.hidden-md Profile
              %form.navbar-form.navbar-right{:role => "search"}
                .form-group.is-empty
                  %input.form-control{:placeholder => "Search", :type => "text"}/
                  %span.material-input
                %button.btn.btn-white.btn-round.btn-just-icon{:type => "submit"}
                  %i.material-icons search
                  .ripple-container
        .col-md-2
        .col-md-8.content
          .col-md-12
            .panel.panel-default.credit-card-box
              .panel-heading.display-table
                .row.display-tr
                  .col-md-7.col-xs-12.col-lg-7.col-sm-7
                    %h4.navbar-brand Detalhes do Pagamento
                  .col-md-5.col-xs-12.col-lg-5.col-sm-5
                    %br/
                    %img{:src => "http://i76.imgup.net/accepted_c22e0.png"}/
              .panel-body
                %form#payment-form{:action => "javascript:void(0);", :method => "POST", :role => "form"}
                  .row
                    .col-xs-12
                      .form-group
                        %label{:for => "cardNumber"} NÚMERO DO CARTÃO
                        .input-group
                          %input.form-control{:autocomplete => "cc-number", :autofocus => "", :name => "cardNumber", :placeholder => "Número de Cartão Válido", :required => "", :type => "tel"}/
                          %span.input-group-addon
                            %i.fa.fa-credit-card
                  .row
                    .col-xs-7.col-md-7
                      .form-group
                        %label{:for => "cardExpiry"}
                          %span.hidden-xs DATA DE VALIDADE
                        %input.form-control{:autocomplete => "cc-exp", :name => "cardExpiry", :placeholder => "MM / YY", :required => "", :type => "tel"}/
                    .col-xs-5.col-md-5.pull-right
                      .form-group
                        %label{:for => "cardCVC"} CÓDIGO DE SEGURANÇA
                        %input.form-control{:autocomplete => "cc-csc", :name => "cardCVC", :placeholder => "CVC", :required => "", :type => "tel"}/
                  .row
                    .col-xs-12
                      .form-group
                        %label{:for => "couponCode"} CUPOM DE PROMOÇÃO
                        %input.form-control{:name => "couponCode", :type => "text"}/
                  .row
                    .col-xs-12
                      %button.subscribe.btn.btn-success.btn-lg.btn-block{:type => "button"} Realizar Pagamento
                  .row{:style => "display:none;"}
                    .col-xs-12
                      %p.payment-errors
  / Core JS Files
  %script{:src => "../assets/js/jquery-3.1.0.min.js", :type => "text/javascript"}
  %script{:src => "../assets/js/bootstrap.min.js", :type => "text/javascript"}
  %script{:src => "../assets/js/material.min.js", :type => "text/javascript"}
  / Charts Plugin
  %script{:src => "../assets/js/chartist.min.js"}
  / Notifications Plugin
  %script{:src => "../assets/js/bootstrap-notify.js"}
  / Google Maps Plugin
  %script{:src => "https://maps.googleapis.com/maps/api/js", :type => "text/javascript"}
  / Material Dashboard javascript methods
  %script{:src => "../assets/js/material-dashboard.js"}
  / Material Dashboard DEMO methods, don't include it in your project!
  %script{:src => "../assets/js/demo.js"}
