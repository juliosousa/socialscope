            .row
              .col-md-6
                .card
                  .card-header.card-chart{"data-background-color" => ""}
                    #dailySalesChart.ct-chart
                  .card-content
                    %h4.title Suas curtidas desta semana
                    %p.category
                      %span.text-success
                        %i.fa.fa-long-arrow-up
                        15%
                      de curtidas a mais nesta semana.
                  .card-footer
                    .stats
                      %i.material-icons access_time
                      atualizado 4 minutos atrás
              .col-md-6
                .card
                  .card-header.card-chart{"data-background-color" => "blue"}
                    #emailsSubscriptionChart.ct-chart
                  .card-content
                    %h4.title Suas curtidas/mês
                    %p.category Desempenho das suas postagens com SocialScope
                  .card-footer
                    .stats
                      %i.material-icons access_time
                      último relatório gerado há 2 dias
